# Anthropic API Configuration (for Claude concept extraction)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Whisper Configuration (local transcription)
# Model options: tiny, base (default), small, medium, large
# Larger models are more accurate but slower
WHISPER_MODEL_SIZE=base

# Podcast Configuration
PODCAST_RSS_FEED=https://feeds.your-podcast-feed.com/powerful-introvert

# Output Configuration
VAULT_PATH=./vault

# Source Materials (downloads, transcripts, articles)
# Stored in vault/_sources/ by default (part of vault, not main repo)
# Can override individual paths or use defaults under SOURCES_PATH
# SOURCES_PATH=./vault/_sources
# DOWNLOADS_PATH=./vault/_sources/downloads
# TRANSCRIPTS_PATH=./vault/_sources/transcripts
# ARTICLES_PATH=./vault/_sources/articles
